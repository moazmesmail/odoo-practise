<odoo>
<!--    exam  form view-->
    <record id="exam_form_view" model="ir.ui.view">
        <field name="name">Exams form view</field>
        <field name="model">openacademy.exam</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                   <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="course_id"/>
                   </group>
               </sheet>
            </form>
        </field>
    </record>
<!--    exam  list view-->
    <record id="exam_list_view" model="ir.ui.view">
        <field name="name">Exams list view</field>
        <field name="model">openacademy.exam</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="course_id"/>
            </list>
        </field>
    </record>
<!--    exam  action-->
    <record id="exam_action" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">openacademy.exam</field>
    </record>

<!--    exam  submission form view-->
    <record id="exam_submission_form_view" model="ir.ui.view">
        <field name="name">Exams Submissions form View</field>
        <field name="model">openacademy.exam.submission</field>
        <field name="arch" type="xml">
            <form create="true">
               <sheet>
                   <group>
                        <field name="student_id"/>
                        <field name="exam_id"/>
                   </group>
               </sheet>
            </form>
        </field>
    </record>

<!--    exam  submission list view-->
    <record id="exam_submission_list_view" model="ir.ui.view">
        <field name="name">Exams Submissions List View</field>
        <field name="model">openacademy.exam.submission</field>
        <field name="arch" type="xml">
            <list create="true">
                <field name="student_id"/>
                <field name="exam_id"/>
                <field name="submission_time"/>
            </list>
        </field>
    </record>

<!--    exam  submission action-->
    <record id="exam_submission_action" model="ir.actions.act_window">
        <field name="name">Exams Submissions</field>
        <field name="res_model">openacademy.exam.submission</field>
        <field name="view_mode">list,form</field>
    </record>

<!--exam grades list view -->
    <record id="exam_grades_list_view" model="ir.ui.view">
        <field name="name" >Exam grades list view</field>
        <field name="model">openacademy.exam.submission</field>
        <field name="arch" type="xml">
            <list >
                <field name="student_id" />
                <field name="course_id" string="Course" />
                <field name="exam_id" />
                <field name="submission_time" />
                <field name="grader" />
                <field name="grade" />
            </list>
        </field>
    </record>
<!--exam grades form view -->
    <record id="exam_grades_form_view" model="ir.ui.view">
        <field name="name" >Exam grades form view</field>
        <field name="model">openacademy.exam.submission</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="student_id"  readonly="1" />
                        <field name="course_id" string="Course"  readonly="1"/>
                        <field name="exam_id"  readonly="1"/>
                        <field name="submission_time"  readonly="1"/>
                        <field name="grader" />
                        <field name="grade" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!--    exam  grades action-->
    <record id="exam_grades_action" model="ir.actions.act_window">
        <field name="name">Exams Grades</field>
        <field name="res_model">openacademy.exam.submission</field>
    </record>

<!--    exam menu-->
    <menuitem id="exam_menu" name="Exams" parent="exam_main_menu" action="exam_action"/>
<!--    exam submission menu-->
    <menuitem id="exam_submission_menu" name="Submissions" parent="exam_main_menu" action="exam_submission_action"/>
<!--    exam grades menu-->
    <menuitem id="exam_grades_menu" name="Grades" parent="exam_main_menu" action="exam_grades_action"/>

</odoo>